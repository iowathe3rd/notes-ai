# --- Database (async) ---
# Used by the application runtime (async engine, drivers like asyncpg).
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/notes

# --- Database (sync) ---
# Used by Alembic migrations (sync engine, psycopg).
DATABASE_URL_SYNC=postgresql+psycopg://postgres:postgres@localhost:5432/notes

# --- Kafka / Redpanda ---
KAFKA_BOOTSTRAP=localhost:19092

# --- Docker Compose: Postgres container ---
# docker-compose.yml reads these when starting postgres.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=notes
